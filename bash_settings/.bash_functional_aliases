#!/bin/bash
function sdiff() {
    one=`basename $1`
    two=`basename $2`
    sort  -u $1 > /tmp/$one.sorted1 && sort -u $2 > /tmp/$two.sorted2;
    echo diff -w -u /tmp/$one.sorted1 /tmp/$two.sorted2
    diff -w -u /tmp/$one.sorted1 /tmp/$two.sorted2
}
function rmv() {
    mv $1 $1.junk && rm -rf $1.junk
}
function noida_rcp() {
    rcp $@ pcr513.fra.mentorg.com:/teams/nonbackuped/tbxteam/vinays/
}
function noida_scp() {
    /usr/bin/scp -r $@ eole.fra.mentorg.com:/teams/nonbackuped/tbxteam/vinays/
}
function meudon_rcp() {
    rcp $@ inntbx7.inn.mentorg.com:/nobackup/vinays/scp_fr
}
function meudon_scp() {
    /usr/bin/scp -r "$@" inntbx7.inn.mentorg.com:/nobackup/vinays/scp_fr
}
function upd() {
    csh ~vinays/scripts/updateGold.csh $1
}
function decryptl() {
    /in/scmtools/Linux3/bin/ikoscrypt_new -key "HJ-&en*A@KL2" -decrypt $@
}
function cstat() {
    cvs -q status "$@" | grep Status | grep -v Up-to-date
}
function ff() {
    find $1 -name "$2" -print
}
function grepc() {
    grep -s "$@" `ffl`
}
function decryptl_new() {
    /in/scmtools/Linux3/bin/ikoscrypt_new -key "HJ-&en*A@KL2" -decrypt $@
}
function decryptl_dev() {
    /home/tbx/CRYPT/ikoscrypt -key "HJ-&en*A@KL2" -decrypt $@
}
function reddecryptl() {
    /home/angoyal/Precise_1703 -enfile $1 -dcfile $1.decrypt
}
function findf() {
    find . -name "$1"
}
function decryptl_new_D3() {
    /home/tbx/CRYPT/ikoscrypt -emul_platform D3 -key "HJ-&en*A@KL2" -decrypt $@
}
function mkcd() {
    mkdir $1 && cd $1;
}
function tarz() {
    tar -zcf $1.tar.gz $1
}
function untar() {
    tar -zxf $1
}
function tar_scp() {
    tar -zcf $1.tar.gz $1;
    noida_scp $1.tar.gz
}
function cdiff() {
    if [[ ! -e changed_files ]]; then
        cf ;
    fi
    cat changed_files | xargs -I aaa sh -c "echo tkdiff -w -B aaa;  tkdiff aaa"
}
function ediff() {
    emacs -mm -bg white -fg black --eval "(ediff  \"$1\" \"$2\")"
}
function x() {
    emacs -mm -bg white -fg black $@ &
}
function qe() {
    emacs -nw -q "$@"
}
function e() {
    emacs -nw "$@"
}
function uc() {
    echo "$@"|tr '[a-z]' '[A-Z]'
}
function lc() {
    echo "$@"|tr '[A-Z]' '[a-z]'
}
function getconfig() {
    config=veloce.med
    if [[ -d _red_veloce.med ]]; then
        config=_red_veloce.med;
    fi
    return $config;
}
function linkd() {
    config=veloce.med
    if [[ -d _red_veloce.med ]]; then
        config=_red_veloce.med;
    fi
    ln -sf ${config}/rtlc.out/NET compiled_design
}
function NET() {
    config=veloce.med
    if [[ -d _red_veloce.med ]]; then
        config=_red_veloce.med;
    fi
    cd ${config}/rtlc.out/NET
}
function dc() {
    #config=getconfig();
    config=veloce.med
    if [[ -d _red_veloce.med ]]; then
        config=_red_veloce.med;
    fi
    if [[ $1 != "-v" ]]; then
        cat ${config}/rtlc.out/driver.commands
    else
        vi ${config}/rtlc.out/driver.commands
    fi
}
function r() {
    history 1000 | grep "$@" |awk '{ $1=""; print substr ($0,2) }'
}
function sv() {
    if [[ -z $SV_VINAY ]]; then
        source ~/bash_settings/bash_software_source/ius13.20.020.sh;
        export SV_VINAY=1;
    fi
    simvision tbx.dump
}
function tk() {
    if [[ -z $TKDIFF_VINAY ]]; then
        source ~/bash_settings/bash_software_source/tkdiff-4.2.sh;
        export TKDIFF_VINAY=1;
    fi
    tkdiff -wB "$@"
}
if  [[  $India_server == 1 ]] ; then
    alias my_scp=noida_scp;
    alias my_rcp=noida_rcp;
else
    alias my_scp=meudon_scp;
    alias my_rcp=meudon_rcp;
fi
alias sdiff=sdiff
alias rmv=rmv
alias r=r
alias noida_rcp=noida_rcp
alias noida_scp=noida_scp
alias meudon_rcp=meudon_rcp
alias meudon_scp=meudon_scp
alias upd=upd
alias decryptl=decryptl
alias cstat=cstat
alias ff=ff
alias grepc=grepc
alias decryptl_new=decryptl_new
alias decryptl_dev=decryptl_dev
alias reddecryptl=reddecryptl
alias findf=findf
alias decryptl_new_D3=decryptl_new_D3
alias mkcd=mkcd
alias tarz=tarz
alias untar=untar
alias tar_scp=tar_scp
alias cdiff=cdiff
alias ediff=ediff
alias x=x
alias uc=uc
alias lc=lc
alias getconfig=getconfig
alias linkd=linkd
alias NET=NET
alias dc=dc
alias r=r
alias sv=sv
